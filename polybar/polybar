foreground = #dfdfdf
#foreground = ${xrdb:foreground}
foreground-alt = #4e4e4e
primary = #1f222d
secondary = #FF6200
alert = #fb4934

[bar/bar]
bottom = true
wm-restack = bspwm
width = 100%
height = 26
offset-x = 0
offset-y = 0

locale = en_US.UTF-8

enable-ipc = true

padding-left = 0
padding-right = 2

module-margin-right = 0
module-margin-left = 0

modules-right = memory sep cpu sep temperature sep volume sep battery sep date sep keyboard
modules-center =
modules-left = bspwm

background = ${colors.background}
foreground = ${colors.foreground}

underline-size = 0
underline-color = ${colors.white}

;tray-detached = false
tray-position = right
;tray-offset-x = 0
;tray-offset-y = 0
;tray-maxsize = 16
tray-padding = 0
tray-scale = 1.0

font-0 = "monospace:size=10;2"
font-1 = "FontAwesome:size=10;2"

[module/keyboard]
type=custom/script

exec = $DOTFILES/scripts/get_keyboard_layout.sh
interval=1

format-padding = 2

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60
interval = 2

format = <ramp> <label>
format-padding = 2
format-underline = ${colors.white}
format-warn = <ramp> <label-warn>
format-warn-underline = ${self.format-underline}

format-prefix = "Temp:"
format-prefix-foreground = ${colors.green}

label = "%temperature-c%"
label-warn = %temperature-c%
label-warn-foreground = ${colors.secondary}

ramp-0 =
ramp-foreground = ${colors.foreground-alt}

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "CPU:"
format-prefix-foreground = ${colors.blue}
format-underline = ${colors.white}
format-padding = 2
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "Mem: "
format-prefix-foreground = ${colors.red}
format-underline = ${colors.white}
format-padding = 2
label = %percentage_used%%

[module/battery]
type = internal/battery
interval = 5
battery = BAT0
adapter = AC0
full-at = 98

label-charging = Charging %percentage%%
label-discharging = %percentage%%

format-charging-prefix = "Bat: "
format-discharging-prefix = "Bat: "
format-full-prefix = "Bat: "
format-charging-prefix-foreground = ${colors.red}
format-discharging-prefix-foreground = ${colors.red}
format-full-prefix-foreground = ${colors.red}

format-charging = <label-charging>
format-charging-padding = 2
format-charging-underline = ${colors.white}

format-discharging = <label-discharging>
format-discharging-padding = 2
format-discharging-underline = ${self.format-charging-underline}

format-full-underline = ${self.format-charging-underline}
format-full-padding = 2

ramp-capacity-0 =
ramp-capacity-foreground = ${colors.foreground-alt}

animation-charging-0 =
animation-charging-foreground = ${colors.foreground-alt}
animation-charging-framerate = 750

animation-discharging-0 =
animation-discharging-foreground = ${colors.foreground-alt}
animation-discharging-framerate = 750


[module/mpd]
type = internal/mpd
host = 127.0.0.1
port = 6600
interval = 2
format-online =<icon-prev><label-song><icon-next>
